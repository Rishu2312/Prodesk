        <h1>Body Mass Index (BMI) Calculator</h1>
        
        
        <div class="divider"></div>
        
        <div class="input-group">
            <label for="height">Your Height (cm):</label>
            <input type="number" id="height" placeholder="Enter height in centimeters" value="180">
        </div>
        
        <div class="input-group">
            <label for="weight">Your Weight (kg):</label>
            <input type="number" id="weight" placeholder="Enter weight in kilograms" value="80">
        </div>
        
        <button id="calculate">Compute BMI</button>
        
        <div class="result" id="result">
            <div class="bmi-value" id="bmi-value">24.89</div>
            <div>Weight Condition: <span class="condition" id="condition">Normal weight</span></div>
        </div>
        
        <div class="project-info">
            <h3>Project Name: BMI Calculator</h3>
            <p>This project aims to create a body mass index calculator. There are two input fields where the user can enter their height in centimeters and weight in kilograms. By clicking the "compute BMI" button, the BMI will be calculated and displayed along with the weight condition, which is determined by if statements based on the BMI.</p>
        </div>
    </div>

    <script>
        // Dynamic background colors
        const colors = [
            ['#ff9a9e', '#fad0c4', '#fbc2eb', '#a6c1ee'],
            ['#84fab0', '#8fd3f4', '#a6c1ee', '#fbc2eb'],
            ['#667eea', '#764ba2', '#fbc2eb', '#a6c1ee'],
            ['#ff758c', '#ff7eb3', '#fbc2eb', '#a6c1ee'],
            ['#a18cd1', '#fbc2eb', '#84fab0', '#8fd3f4']
        ];

        let currentColorSet = 0;

        function changeBackgroundColors() {
            const root = document.documentElement;
            currentColorSet = (currentColorSet + 1) % colors.length;
            
            root.style.setProperty('--color-1', colors[currentColorSet][0]);
            root.style.setProperty('--color-2', colors[currentColorSet][1]);
            root.style.setProperty('--color-3', colors[currentColorSet][2]);
            root.style.setProperty('--color-4', colors[currentColorSet][3]);
        }

        // Change colors every 10 seconds
        setInterval(changeBackgroundColors, 10000);

        // BMI Calculation
        document.getElementById('calculate').addEventListener('click', function() {
            // Get input values
            const height = parseFloat(document.getElementById('height').value) / 100; // convert cm to m
            const weight = parseFloat(document.getElementById('weight').value);
            
            if (isNaN(height) || isNaN(weight) || height <= 0 || weight <= 0) {
                alert('Please enter valid height and weight values');
                return;
            }
            
            // Calculate BMI
            const bmi = weight / (height * height);
            
            // Display result with animation
            const resultElement = document.getElementById('result');
            resultElement.classList.remove('show');
            
            // Wait for the hide animation to complete
            setTimeout(() => {
                document.getElementById('bmi-value').textContent = bmi.toFixed(2);
                
                // Determine weight condition
                let condition = '';
                let conditionClass = '';
                
                if (bmi < 18.5) {
                    condition = 'Underweight';
                    conditionClass = 'underweight';
                } else if (bmi >= 18.5 && bmi < 25) {
                    condition = 'Normal weight';
                    conditionClass = 'normal';
                } else if (bmi >= 25 && bmi < 30) {
                    condition = 'Overweight';
                    conditionClass = 'overweight';
                } else {
                    condition = 'Obese';
                    conditionClass = 'obese';
                }
                
                document.getElementById('condition').textContent = condition;
                document.getElementById('condition').className = 'condition ' + conditionClass;
                
                // Show result with animation
                resultElement.classList.add('show');
            }, 300);
        });

        // Initial calculation on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('calculate').click();
        });
    </script>
</body>
